# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Auth
GET     /auth/login                 controllers.Auth.login
GET     /auth/logon                 controllers.Auth.logon
GET     /auth/logout                controllers.Auth.logout


# API - Stats
GET     /stats/favs/tags            controllers.Api.statsFavsTags
GET     /stats/favs/authors         controllers.Api.statsFavsAuthors
GET     /stats/user/tags            controllers.Api.statsUserTags


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Temp test etc
GET     /test                       controllers.Application.test